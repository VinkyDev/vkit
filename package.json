{
  "name": "vkit",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:react dev:electron:after",
    "dev:react": "pnpm --filter react dev",
    "dev:electron": "pnpm --filter electron dev",
    "dev:electron:after": "wait-on http://localhost:9900 && pnpm dev:electron",
    "build": "node ./scripts/build.js",
    "build:mac": "pnpm run build && pnpm run --filter electron build:mac",
    "build:win": "pnpm run build && pnpm run --filter electron build:win",
    "build:linux": "pnpm run build && pnpm run --filter electron build:linux",
    "build:react": "pnpm --filter react build",
    "build:electron": "pnpm --filter electron build",
    "build:features": "pnpm --filter './features/*' build",
    "clean": "pnpm run clean:dist && pnpm run clean:modules",
    "clean:dist": "pnpm -rc exec rm -rf *.tsbuildinfo .cache build dist dist-electron",
    "clean:modules": "pnpm -rc exec rm -rf node_modules && pnpm -c exec rm -rf ./node_modules",
    "reset": "pnpm run clean:modules && pnpm i",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format:check",
    "lint:staged": "eslint --fix",
    "format:staged": "prettier --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint:staged",
      "pnpm run format:staged"
    ],
    "*.{json,md,css,scss,html}": [
      "pnpm run format:staged"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@vkit/api": "workspace:*",
    "@vkit/constants": "workspace:*",
    "@vkit/utils": "workspace:*",
    "@vkit/hooks": "workspace:*",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.1",
    "@eslint-react/eslint-plugin": "^1.0.0",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/enzyme": "^3.10.19",
    "@types/hoist-non-react-statics": "^3.3.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "7.0.2",
    "wait-on": "^8.0.3"
  }
}
